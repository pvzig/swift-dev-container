{
	"id": "swift",
	"version": "0.0.5",
	"name": "Swift",
	"description": "Install Swift and common tools for developing Swift based applications.",
	"documentationURL": "https://github.com/pvzig/swift-dev-container/tree/main/src/swift",
	"options": {
		"version": {
			"type": "string",
			"proposals": [
				"latest",
				"5.6",
				"5.5",
				"5.4",
				"5.3",
				"5.2",
				"5.1",
				"5.0"
			],
			"default": "latest",
			"description": "Select or enter a Swift version to install"
		}
	},
	"customizations": {
		"vscode": {
			"extensions": [
				"sswg.swift-lang",
				"vadimcn.vscode-lldb"
			],
			"settings": {
				"lldb.library": "/usr/lib/liblldb.so"
			}
		}
	},
	"containerEnv": {
		"SWIFT_ROOT": "/usr/local/bin/swift",
		"PATH": "/usr/local/bin/swift/usr/bin:${PATH}"
    },
	"capAdd": [
		"SYS_PTRACE"
	],
	"securityOpt": [
		"seccomp=unconfined"
	],
	"installsAfter": [
		"ghcr.io/devcontainers/features/common-utils"
	]
}
